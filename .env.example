# Environment
ENVIRONMENT=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=
DB_NAME=planets
DB_SSLMODE=disable
DB_MIGRATIONS_PATH=migrations

# Database Connection Pool
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME_MINUTES=5

# Redis Configuration
REDIS_ENABLED=true
# Railway (use full URL, e.g.: redis://default:password@host:port)
REDIS_URL=
# Localhost
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT & Authentication Configuration
JWT_SECRET=
JWT_EXPIRATION_HOURS=24

# Cookie Configuration
COOKIE_SAME_SITE=lax

# OAuth Configuration
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# Server Configuration
SERVER_PORT=8080
SERVER_URL=http://localhost:8080
SERVER_READ_TIMEOUT_SECONDS=15
SERVER_WRITE_TIMEOUT_SECONDS=15
SERVER_IDLE_TIMEOUT_SECONDS=60

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
CORS_DEBUG=false

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=text

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_SECOND=10
RATE_LIMIT_BURST_SIZE=20
RATE_LIMIT_TRUST_PROXY=false

# Universe Generation Configuration
UNIVERSE_SECTOR_COUNT=16
UNIVERSE_SYSTEMS_PER_SECTOR=16
UNIVERSE_MIN_PLANETS_PER_SYSTEM=3
UNIVERSE_MAX_PLANETS_PER_SYSTEM=12

# Admin Configuration
ADMIN_EMAIL=admin@localhost
ADMIN_USERNAME=admin
ADMIN_DISPLAY_NAME=Admin

