# Environment
ENVIRONMENT=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your-postgres-password
DB_NAME=planets
DB_SSLMODE=disable
DB_MIGRATIONS_PATH=migrations

# Database Connection Pool
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME_MINUTES=5

# JWT & Authentication Configuration
JWT_SECRET=your-jwt-secret-key-at-least-32-characters-long
JWT_EXPIRATION_HOURS=24

# Cookie Configuration
COOKIE_SAME_SITE=lax

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Server Configuration
SERVER_PORT=8080
SERVER_URL=http://localhost:8080
SERVER_READ_TIMEOUT_SECONDS=15
SERVER_WRITE_TIMEOUT_SECONDS=15
SERVER_IDLE_TIMEOUT_SECONDS=60

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
CORS_DEBUG=true

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=text

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_SECOND=10
RATE_LIMIT_BURST_SIZE=20

# Universe Generation Configuration
UNIVERSE_SECTOR_COUNT=16
UNIVERSE_SYSTEMS_PER_SECTOR=16
UNIVERSE_MIN_PLANETS_PER_SYSTEM=3
UNIVERSE_MAX_PLANETS_PER_SYSTEM=12
UNIVERSE_DEFAULT_GALAXY_NAME=Andromeda
